    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        },
        {
            "name": "PHPUnit",
            "type": "php",
            "request": "launch",
            "env": {
                "XDEBUG_CONFIG": "idekey=PHPSTORM"
            },
            "program": "${workspaceRoot}/vendor/phpunit/phpunit/phpunit",
            "args": [
                "${workspaceRoot}/test"
            ],
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}